@model CouponForUpdateDto
@{
    ViewBag.Title = "Edit Coupon";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-sm-12 col-xl-6">
            <div class="bg-secondary rounded h-100 p-4">
                <h6 class="mb-4">Edit Coupon</h6>
                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="CouponId" />

                    <div class="mb-3">
                        <label asp-for="CouponCode" class="form-label">Coupon Code</label>
                        <input asp-for="CouponCode" class="form-control" type="text" />
                        <span asp-validation-for="CouponCode" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="CouponStock" class="form-label">Stock</label>
                        <input asp-for="CouponStock" class="form-control" type="number" />
                        <span asp-validation-for="CouponStock" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="CouponDiscountPercentage" class="form-label">Discount Percentage</label>
                        <input asp-for="CouponDiscountPercentage" class="form-control" type="number" step="0.01" />
                        <span asp-validation-for="CouponDiscountPercentage" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="EndDate" class="form-label">End Date</label>
                        <input asp-for="EndDate" class="form-control" type="date" />
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </form>
            </div>
        </div>
    </div>
</div>
