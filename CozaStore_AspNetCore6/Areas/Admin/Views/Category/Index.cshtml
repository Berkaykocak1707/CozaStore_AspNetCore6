@model IEnumerable<CategoryDto>  // Modelinizi CategoryDto veya uygun bir DTO ile değiştirin
@{
    ViewBag.Title = "Categories";
}

<div class="bg-secondary rounded h-100 p-4">
    <h6 class="mb-4">Category</h6>
    <div class="table-responsive">
        @if (Model.Any())
        {
            <div class="mb-3">
                <a class="btn btn-sm btn-primary" asp-action="Create">Create a Category</a>
            </div>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Slug</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var category in Model)
                    {
                        <tr>
                            <td>@category.Name</td>
                            <td>@category.Slug</td>
                            <td>
                                <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@category.Id">Edit</a>
                                <a class="btn btn-sm btn-primary" asp-action="Delete" asp-route-id="@category.Id">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            
        }
        else
        {
            <p>There are no categories to display.</p>
            <a class="btn btn-sm btn-primary" asp-action="Create">Create a Category</a>
        }
    </div>
</div>
