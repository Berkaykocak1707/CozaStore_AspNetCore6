<!-- Sidebar Start -->
<div class="sidebar pe-4 pb-3">
    <nav class="navbar bg-secondary navbar-dark">
        <a href="index.html" class="navbar-brand mx-4 mb-3">
            <h3 class="text-primary"><i class="fa fa-user-edit me-2"></i>DarkPan</h3>
        </a>
        <div class="d-flex align-items-center ms-4 mb-4">
            <div class="position-relative">
                <img class="rounded-circle" src="~/admin/img/user.jpg" alt="" style="width: 40px; height: 40px;">
                <div class="bg-success rounded-circle border border-2 border-white position-absolute end-0 bottom-0 p-1"></div>
            </div>
            <div class="ms-3">
                <h5 class="mb-0">@User.Identity.Name</h5>
                
            </div>
        </div>
        <div class="navbar-nav w-100">
            <a asp-action="Index" asp-controller="Dashboard" class="nav-item nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "Dashboard" && ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")"><i class="fa fa-tachometer-alt me-2"></i>Dashboard</a>
            
            <a asp-action="Index" asp-controller="Category" class="nav-item nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "Category" && ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")"><i class="fa fa-keyboard me-2"></i>Category</a>
            <a asp-action="Index" asp-controller="Coupon" class="nav-item nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "Coupon" && ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")"><i class="fa fa-keyboard me-2"></i>Coupon</a>
            <a asp-action="Index" asp-controller="Product" class="nav-item nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "Product" && ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")"><i class="fa fa-keyboard me-2"></i>Product</a>
            <a asp-action="Index" asp-controller="Stock" class="nav-item nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "Stock" && ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")"><i class="fa fa-keyboard me-2"></i>Stock</a>
            <a asp-action="Index" asp-controller="Contact" class="nav-item nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "Contact" && ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")"><i class="fa fa-keyboard me-2"></i>Contact</a>
            <a asp-action="Index" asp-controller="Order" class="nav-item nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "Order" && ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")"><i class="fa fa-keyboard me-2"></i>Order</a>
            @if (User.IsInRole("Admin"))
            {
            <a asp-action="Index" asp-controller="User" class="nav-item nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "User" && ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")"><i class="fa fa-tachometer-alt me-2"></i>Users</a>
            <a asp-action="Index" asp-controller="Role" class="nav-item nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "Role" && ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")"><i class="fa fa-tachometer-alt me-2"></i>Role</a>
            <a asp-action="Index" asp-controller="About" class="nav-item nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "About" && ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")"><i class="fa fa-keyboard me-2"></i>About</a>
            <a asp-action="Index" asp-controller="Information" class="nav-item nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "Information" && ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")"><i class="fa fa-keyboard me-2"></i>Information</a>
            }
            
        </div>
    </nav>
</div>
<!-- Sidebar End -->