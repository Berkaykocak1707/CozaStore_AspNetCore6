@model IEnumerable<InformationDto>
@{
    ViewBag.Title = "Information";
}

<div class="bg-secondary rounded h-100 p-4">
    <h6 class="mb-4">Information</h6>
    <div class="table-responsive">
        @if (Model.Any())
        {
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Address</th>
                        <th scope="col">Phone</th>
                        <th scope="col">Email</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var info in Model)
                    {
                        <tr>
                            <td>@info.Address</td>
                            <td>@info.Phone</td>
                            <td>@info.Email</td>
                            <td>
                                <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@info.InfoId">Edit</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>There are no information entries to display.</p>
        }
    </div>
</div>
