@model UserDtoForCreation

<div class="container mt-5">
    <div class="text-center mb-4">
        <h1 class="display-4">Create User</h1>
    </div>

    <form method="post" asp-action="Create">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group my-3">
                    <label asp-for="UserName">User Name</label>
                    <input asp-for="UserName" class="form-control" />
                </div>

                <div class="form-group my-3">
                    <label asp-for="Email">Email</label>
                    <input asp-for="Email" class="form-control" />
                </div>

                <div class="form-group my-3">
                    <label asp-for="Password">Password</label>
                    <input asp-for="Password" class="form-control" />
                </div>

                <div class="form-group my-3">
                    <label asp-for="PhoneNumber">Phone Number</label>
                    <input asp-for="PhoneNumber" class="form-control" />
                </div>

                <div class="form-group my-3">
                    <button type="submit" class="btn btn-primary">Create User</button>
                    <a asp-action="Index" class="btn btn-outline-primary ml-2">
                        <i class="fa fa-arrow-left"></i> Back
                    </a>
                </div>
            </div>

            <div class="col-md-6">
                <div class="lead p-2 mt-2">
                    <strong>Roles</strong>
                    @foreach (var item in Model.Roles)
                    {
                        <div class="form-check my-2">
                            <input type="checkbox" name="Roles" value="@item" class="form-check-input" />
                            <label class="form-check-label">@item</label>
                        </div>
                    }
                </div>
            </div>
        </div>
    </form>
</div>
